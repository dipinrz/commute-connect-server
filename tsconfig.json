{
  "compilerOptions": {
    "target": "ES2016",                            // or "ES2020"
    "module": "CommonJS",
    "rootDir": "./src",                            // ðŸ‘ˆ where your .ts files are
    "outDir": "./dist",                            // ðŸ‘ˆ compiled .js output
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],                              // only compile src folder
  "exclude": ["node_modules", "dist"]              // don't compile node_modules or dist
}
